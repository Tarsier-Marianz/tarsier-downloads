{
  "manifest_version": 2,
  "name": "Tarsier Downloads",
  "version": "2.0",
  "background": {
    "persistent": false,
    "scripts": ["assets/js/jquery.min.js"]
  },
  "icons" : { 
	"16": "icon16.png",
	"24": "icon24.png",
	"32": "icon32.png",
	"48": "icon48.png",
	"64": "icon64.png",
	"128": "icon128.png" 
  }, 
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
	"default_icon": "icon16.png",
	"default_title": "Tarsier Downloads",
	"default_popup": "popup.html"
  },
  "externally_connectable": {
	"matches": ["*://localhost/*","*://192.168.0.97/*", "*://www.telcomtrix.com/*"]
  },
  "permissions": [
    "history",
    "downloads",
    "activeTab", 
	"desktopCapture",
	"tabCapture",
	"unlimitedStorage",
	"notifications",
	"contextMenus",
	"storage",
	"alarms",
    "tabs",
    "*://*/*",
	"<all_urls>"
  ]
}